<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>aaxclean_cli</RootNamespace>
    <Version>0.3.1</Version>
    <Authors>MrGneissGuy</Authors>
    <Company>Just Me, Inc.</Company>
    <Description>Command line interface for AAXClean</Description>
    <PackageProjectUrl>https://github.com/Mbucari/aaxclean-cli</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Mbucari/aaxclean-cli</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>Audible AAC AAXC m4b audiobook</PackageTags>
    <PackageReleaseNotes>Added list-chapters and console colors</PackageReleaseNotes>
    <NeutralLanguage>English</NeutralLanguage>
	<PublishTrimmed>true</PublishTrimmed>
	<PublishSingleFile>true</PublishSingleFile>
	<PublishProtocol>FileSystem</PublishProtocol>
	<PublishReadyToRun>true</PublishReadyToRun>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<DebugSymbols>False</DebugSymbols>
		<DebugType>None</DebugType>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Properties\PublishProfiles\**" />
	  <EmbeddedResource Remove="Properties\PublishProfiles\**" />
	  <None Remove="Properties\PublishProfiles\**" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="AAXClean" Version="2.1.0.1" />
  </ItemGroup>

</Project>
